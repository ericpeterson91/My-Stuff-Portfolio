<!DOCTYPE html>
<html>
  <head>
    <title>Stuff Portfolio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="icon" type="image/svg+xml" href="https://example.com/image.svg">
    <script>
      const amount = parseInt(document.querySelector('#sum').substring(1)) //maybe need to parseInt here

      function convertToUSD() {
        fetch('https://api.exchangeratesapi.io/latest?base=CAD')
        .then(response => response.json())
        .then(data => {
          const rate = data.rates.USD
          amount.innerHTML = (rate.toFixed(2) * amount)

        })
      }
      function convertToCAD() {
        fetch('https://api.exchangeratesapi.io/latest?base=USD')
        .then(response => response.json())
        .then(data => {
          const rate = data.rates.CAD
          amount.innerHTML = (rate.toFixed(2) * amount) 

        })
      }

    </script>
  </head>
  <body>
  
    <div class="container">
      <h1 class="head-title">My Stuff Portfolio</h1>
      <h4>Track what you own</h4>

    <a href="/new"><button class="btn btn-primary">Add Item</button></a>      

      <h1 class="all-items">All Items</h1>
      <% items.forEach(item => { %>
        <div class="card mt-4">
          <h2 class="card-title"><%= item.name %> </h4>
        
       
            <h4><%= item.purchasePrice %> </h4>
          
          <div class="card-subtitle text-muted mb-2">
        
              <h5><%= item.purchaseDate.toLocaleDateString() %> </h5>
         

          <a  class="btn btn-secondary" href="/<%= item.id%>/comment">Item notes</a>    
          <a  class="btn edit" href="/<%= item.id%>/edit">Edit</a>  
          <form method="POST" action="/<%= item.id%>?_method=DELETE">
          <button class="btn btn-danger">
            Delete
          </button>
        </form>  
        

          </div>
        </div>
        <% }) %>
        
        <% let totalValue = 0 %> 
        <% items.forEach(item => { %> 
          <%  totalValue += parseInt(item.purchasePrice.substring(1)) %>
          
          <% }) %> 
          <h3 class="total-value">Total Item Value:</h3>
          <h4 id="sum">$<%=(totalValue) %> </h4>


          <button onclick="convertToUSD()">Convert to USD</button>
          <button onclick="convertToCAD()">Convert to CAD</button>

    </div>
 
    
  </body>
</html>
