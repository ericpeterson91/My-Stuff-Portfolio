<!DOCTYPE html>
<html>
  <head>
    <title>Stuff Portfolio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="icon" type="image/svg+xml" href="https://example.com/image.svg">
  </head>
  <body>
    <div class="container">
      <h1 class="mb-6">My Stuff Portfolio</h1>
      <h2>Track what you own, and its value!</h2>

    <a href="/new"><button class="btn btn-primary">Add Item</button></a>      

    <!-- include partial? -->

    

      <h1>All Items</h1>
      <% items.forEach(item => { %>
        <div class="card mt-4">
          <h2 class="card-title"><%= item.name %> </h4>
        
       
            <h4><%= item.purchasePrice %> </h4>
          
          <div class="card-subtitle text-muted mb-2">
        
              <h4><%= item.purchaseDate.toLocaleDateString() %> </h4>
         

          <a  class="btn btn-secondary" href="./<%= item.id%>">Item notes</a>    
          <a href="/<%= item.id%>/edit">Edit</a>  
          <form method="POST" action="/<%= item.id%>?_method=DELETE">
          <button>
            Delete
          </button>
        </form>  
        

          </div>
        </div>
        <% }) %>
        
        <% let totalValue = 0 %> 
        <% items.forEach(item => { %> 
          <%  totalValue += parseInt(item.purchasePrice.substring(1)) %>
          
          <% }) %> 
          <h3>Total Item Value:</h3>
          <h4>$<%=(totalValue) %> </h4>





          <h6 id="value">0</h6>
          <button onclick="convertToUSD()">Convert to USD</button>
          <button onclick="convertToCAD()">Convert to CAD</button>


    </div>
    <br><br>
    
    <div>
    <!-- Add the values together with reduce? I think -->
    <!-- then use an API to convert currency with this number -->
    
    </div>
    <script>
      let totalVal = 0
      items.forEach(item => {
        totalVal += parseInt(item.purchasePrice)
      })
      console.log(totalVal)

      const totalValue = document.querySelector('#value') //maybe need to parseInt here

      function convertToUSD() {
        fetch('https://api.exchangeratesapi.io/latest?base=CAD')
        .then(response => response.json())
        .then(data => {
          const rate = data.rates.USD
          totalValue.innerHTML = (rate.toFixed(2) * totalValue) //template literal here 

        })
      }
      function convertToCAD() {
        fetch('https://api.exchangeratesapi.io/latest?base=USD')
        .then(response => response.json())
        .then(data => {
          const rate = data.rates.CAD
          totalValue.innerHTML = (rate.toFixed(2) * totalValue) //template literal here 

        })
      }


      
    </script>
  </body>
</html>
